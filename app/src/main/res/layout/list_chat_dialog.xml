<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="@dimen/d_50_60_70"
    android:layout_height="@dimen/d_50_60_70"
    android:id="@+id/image_chatDialog"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/d_5_8_12"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/d_23_26_30"
            android:id="@+id/list_item_Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="14sp"
            android:id="@+id/list_item_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>